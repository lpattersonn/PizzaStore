@{
}

<section class="row heading">
    <div class="wrap d-grid grid-column-2">
        <h1>Enjoy Your Pizza In Town</h1>
        <div class="heading-image" >
            <img class="heading-image-img" src="/images/Pizzas/Create.png" />          
        </div>
    </div>
</section>
<section class="row body">
@foreach (var pizza in Model) {
    <div class="pizza">
        <img class="pizza-img" src=@pizza.ImageURL />
        <p class="pizza-title" >@pizza.Name</p>
        <p>$@pizza.Price</p>
        <form>
            <button class="btn btn-primary" type="submit">Add To Cart</button>
        </form>
    </div>
}
</section>

